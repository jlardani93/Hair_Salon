@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row">
    <div class="col-md-12">
      @if (Model.Count == 0)
      {
        <h2>There are currently no specialties in the system</h2>
      }
      <h2>Specialties</h2>
      <ul>
        @foreach (var specialty in Model)
        {
          <a href="/Specialty/Info/@specialty.GetId()"><li>@specialty.GetName()</li></a>
        }
      </ul>
      <a href="/Specialty/Form"><button type="button" class="btn">Add a Specialty</button></a>
      <a href="/Specialty/DeleteAll"><button type="button" class="btn">Delete All Specialties</button></a>
    </div>
  </div>
</div>
