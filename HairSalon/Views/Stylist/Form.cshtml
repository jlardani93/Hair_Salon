@{
  Layout = "_Layout";
}

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <form action="/Stylist/Create" method="post">
        <div class="form-group">
          <label for="name">Stylist Name: </label>
          <input type="text" name="name" id="name">
        </div>
        <button type="submit" class="btn">Create Stylist</button>
      </form>
      <a href="/"><button type="button" class="btn">View All Stylists</button></a>
    </div>
  </div>
</div>
